generator neonClient {
  provider        = "prisma-client-js"
  output          = "./generated/neon"
  previewFeatures = ["multiSchema"]
}

datasource neonDb {
  provider = "postgresql"
  url      = env("NEON_DATABASE_URL")
}

model Product {
  id                String               @id @default(uuid())
  companyId         String
  name              String
  description       String?
  sku               String               @unique
  barcode           String?              @unique
  slug              String?              @unique
  categoryId        String?
  brandId           String?
  weight            Decimal?
  dimensions        Json?
  color             String?
  size              String?
  material          String?
  costPrice         Decimal?
  sellingPrice      Decimal?
  wholesalePrice    Decimal?
  minStockLevel     Int                  @default(0)
  maxStockLevel     Int?
  reorderPoint      Int?
  reorderQuantity   Int?
  status            ProductStatus        @default(ACTIVE)
  isTrackable       Boolean              @default(true)
  isSerialized      Boolean              @default(false)
  images            Json?
  primaryImage      String?
  metaTitle         String?
  metaDescription   String?
  tags              Json?
  leadTimeSupply    Int?
  shelfLife         Int?
  createdAt         DateTime             @default(now())
  updatedAt         DateTime             @updatedAt
  createdBy         String
  BundleItems       BundleItems[]
  BundleProducts    BundleProducts[]
  goodsReceiptItems GoodsReceiptItem[]
  auditItems        InventoryAuditItem[]
  audits            InventoryAudit[]
  inventoryItems    InventoryItem[]
  movements         InventoryMovement[]
  orderItems        OrderItem[]
  reviews           ProductReview[]
  suppliers         ProductSupplier[]
  variants          ProductVariant[]
  brand             Brand?               @relation(fields: [brandId], references: [id])
  category          Category?            @relation(fields: [categoryId], references: [id])
  purchaseItems     PurchaseOrderItem[]
  transferItems     StockTransferItem[]

  @@map("products")
}

model ProductVariant {
  id                String               @id @default(uuid())
  productId         String
  name              String
  sku               String               @unique
  barcode           String?              @unique
  attributes        Json
  costPrice         Decimal?
  sellingPrice      Decimal?
  minStockLevel     Int?
  reorderPoint      Int?
  isActive          Boolean              @default(true)
  createdAt         DateTime             @default(now())
  updatedAt         DateTime             @updatedAt
  goodsReceiptItems GoodsReceiptItem[]
  auditItems        InventoryAuditItem[]
  inventoryItems    InventoryItem[]
  movements         InventoryMovement[]
  orderItems        OrderItem[]
  product           Product              @relation(fields: [productId], references: [id], onDelete: Cascade)
  purchaseItems     PurchaseOrderItem[]
  transferItems     StockTransferItem[]

  @@map("product_variants")
}

model Category {
  id          String     @id @default(uuid())
  name        String
  description String?
  slug        String     @unique
  parentId    String?
  level       Int        @default(0)
  path        String?
  icon        String?
  color       String?
  image       String?
  isActive    Boolean    @default(true)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  parent      Category?  @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children    Category[] @relation("CategoryHierarchy")
  products    Product[]

  @@map("categories")
}

model Brand {
  id           String    @id @default(uuid())
  name         String    @unique
  description  String?
  logo         String?
  website      String?
  contactEmail String?
  contactPhone String?
  isActive     Boolean   @default(true)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  products     Product[]

  @@map("brands")
}

model ProductBundle {
  id             String           @id @default(uuid())
  name           String
  description    String?
  sku            String           @unique
  bundlePrice    Decimal
  discount       Decimal?
  isActive       Boolean          @default(true)
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  BundleItems    BundleItems[]
  BundleProducts BundleProducts[]

  @@map("product_bundles")
}

model Warehouse {
  id                 String               @id @default(uuid())
  companyId          String
  locationId         String?
  name               String
  code               String               @unique
  description        String?
  address            Json?
  coordinates        Json?
  timezone           String?
  managerName        String?
  managerEmail       String?
  managerPhone       String?
  phone              String?
  email              String?
  type               WarehouseType        @default(STANDARD)
  capacity           Json?
  isActive           Boolean              @default(true)
  hasRfid            Boolean              @default(false)
  hasBarcode         Boolean              @default(true)
  temperatureControl Boolean              @default(false)
  securityLevel      String?
  allowsReceiving    Boolean              @default(true)
  allowsShipping     Boolean              @default(true)
  allowsTransfers    Boolean              @default(true)
  allowsCrossDock    Boolean              @default(false)
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
  goodsReceipts      GoodsReceipt[]
  auditItems         InventoryAuditItem[]
  audits             InventoryAudit[]
  inventoryItems     InventoryItem[]
  movements          InventoryMovement[]
  orders             Order[]
  purchaseOrders     PurchaseOrder[]
  shipments          Shipment[]
  transfers          StockTransfer[]      @relation("TransferFrom")
  receivedTransfers  StockTransfer[]      @relation("TransferTo")

  @@map("warehouses")
}

model InventoryItem {
  id                String              @id @default(uuid())
  productId         String
  variantId         String?
  warehouseId       String
  zone              String?
  aisle             String?
  shelf             String?
  bin               String?
  locationCode      String?
  quantity          Int                 @default(0)
  reservedQuantity  Int                 @default(0)
  availableQuantity Int                 @default(0)
  averageCost       Decimal?
  lastCost          Decimal?
  lotNumber         String?
  batchNumber       String?
  serialNumbers     Json?
  expiryDate        DateTime?
  status            InventoryStatus     @default(AVAILABLE)
  qcStatus          QualityStatus       @default(PASSED)
  quarantineReason  String?
  lastMovement      DateTime?
  lastCount         DateTime?
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  product           Product             @relation(fields: [productId], references: [id])
  variant           ProductVariant?     @relation(fields: [variantId], references: [id])
  warehouse         Warehouse           @relation(fields: [warehouseId], references: [id])
  movements         InventoryMovement[]
  reservations      StockReservation[]

  @@unique([productId, variantId, warehouseId, lotNumber])
  @@map("inventory_items")
}

model InventoryMovement {
  id              String          @id @default(uuid())
  type            MovementType
  subtype         String?
  productId       String
  variantId       String?
  warehouseId     String
  inventoryItemId String?
  quantity        Int
  quantityBefore  Int
  quantityAfter   Int
  unitCost        Decimal?
  totalCost       Decimal?
  referenceType   String?
  referenceId     String?
  fromLocation    String?
  toLocation      String?
  lotNumber       String?
  batchNumber     String?
  expiryDate      DateTime?
  reason          String?
  notes           String?
  userId          String
  approvedBy      String?
  approvedAt      DateTime?
  occurredAt      DateTime        @default(now())
  createdAt       DateTime        @default(now())
  inventoryItem   InventoryItem?  @relation(fields: [inventoryItemId], references: [id])
  product         Product         @relation(fields: [productId], references: [id])
  variant         ProductVariant? @relation(fields: [variantId], references: [id])
  warehouse       Warehouse       @relation(fields: [warehouseId], references: [id])

  @@map("inventory_movements")
}

model Supplier {
  id                 String             @id @default(uuid())
  companyId          String
  name               String
  code               String             @unique
  email              String?
  phone              String?
  website            String?
  companyType        CompanyType?
  taxId              String?
  vatNumber          String?
  registrationNumber String?
  billingAddress     Json
  shippingAddress    Json?
  contactName        String?
  contactEmail       String?
  contactPhone       String?
  contactTitle       String?
  paymentTerms       String?
  creditLimit        Decimal?
  currency           String             @default("USD")
  rating             Decimal?
  onTimeDelivery     Decimal?
  qualityRating      Decimal?
  status             SupplierStatus     @default(ACTIVE)
  certifications     Json?
  notes              String?
  createdAt          DateTime           @default(now())
  updatedAt          DateTime           @updatedAt
  createdBy          String
  products           ProductSupplier[]
  purchaseOrders     PurchaseOrder[]
  contacts           SupplierContact[]
  documents          SupplierDocument[]
  invoices           SupplierInvoice[]

  @@map("suppliers")
}

model ProductSupplier {
  id           String   @id @default(uuid())
  productId    String
  supplierId   String
  supplierSku  String?
  supplierName String?
  unitCost     Decimal
  currency     String   @default("USD")
  minOrderQty  Int?
  maxOrderQty  Int?
  leadTimeDays Int?
  isPreferred  Boolean  @default(false)
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  product      Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  supplier     Supplier @relation(fields: [supplierId], references: [id], onDelete: Cascade)

  @@unique([productId, supplierId])
  @@map("product_suppliers")
}

model SupplierContact {
  id         String   @id @default(uuid())
  supplierId String
  name       String
  title      String?
  email      String?
  phone      String?
  mobile     String?
  isPrimary  Boolean  @default(false)
  department String?
  isActive   Boolean  @default(true)
  notes      String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  supplier   Supplier @relation(fields: [supplierId], references: [id], onDelete: Cascade)

  @@map("supplier_contacts")
}

model SupplierDocument {
  id         String       @id @default(uuid())
  supplierId String
  name       String
  type       DocumentType
  category   String?
  fileName   String
  fileSize   Int?
  fileType   String?
  filePath   String
  uploadedBy String
  uploadedAt DateTime     @default(now())
  expiresAt  DateTime?
  isActive   Boolean      @default(true)
  supplier   Supplier     @relation(fields: [supplierId], references: [id], onDelete: Cascade)

  @@map("supplier_documents")
}

model PurchaseOrder {
  id             String              @id @default(uuid())
  orderNumber    String              @unique
  supplierId     String
  warehouseId    String?
  subtotal       Decimal             @default(0)
  taxAmount      Decimal             @default(0)
  shippingCost   Decimal             @default(0)
  discountAmount Decimal             @default(0)
  totalAmount    Decimal             @default(0)
  currency       String              @default("USD")
  status         PurchaseOrderStatus @default(DRAFT)
  orderDate      DateTime            @default(now())
  expectedDate   DateTime?
  deliveryDate   DateTime?
  paymentTerms   String?
  shippingTerms  String?
  trackingNumber String?
  carrier        String?
  approvedBy     String?
  approvedAt     DateTime?
  notes          String?
  internalNotes  String?
  createdAt      DateTime            @default(now())
  updatedAt      DateTime            @updatedAt
  createdBy      String
  receipts       GoodsReceipt[]
  items          PurchaseOrderItem[]
  supplier       Supplier            @relation(fields: [supplierId], references: [id])
  warehouse      Warehouse?          @relation(fields: [warehouseId], references: [id])
  invoices       SupplierInvoice[]

  @@map("purchase_orders")
}

model PurchaseOrderItem {
  id              String             @id @default(uuid())
  purchaseOrderId String
  productId       String
  variantId       String?
  orderedQty      Int
  receivedQty     Int                @default(0)
  remainingQty    Int
  unitCost        Decimal
  totalCost       Decimal
  productName     String
  productSku      String
  supplierSku     String?
  expectedDate    DateTime?
  status          PurchaseItemStatus @default(PENDING)
  notes           String?
  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt
  product         Product            @relation(fields: [productId], references: [id])
  purchaseOrder   PurchaseOrder      @relation(fields: [purchaseOrderId], references: [id], onDelete: Cascade)
  variant         ProductVariant?    @relation(fields: [variantId], references: [id])

  @@map("purchase_order_items")
}

model GoodsReceipt {
  id              String             @id @default(uuid())
  purchaseOrderId String
  warehouseId     String
  receiptNumber   String             @unique
  receivedDate    DateTime           @default(now())
  qcStatus        QualityStatus      @default(PENDING)
  qcNotes         String?
  qcBy            String?
  qcDate          DateTime?
  status          ReceiptStatus      @default(PENDING)
  notes           String?
  receivedBy      String
  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt
  items           GoodsReceiptItem[]
  purchaseOrder   PurchaseOrder      @relation(fields: [purchaseOrderId], references: [id])
  warehouse       Warehouse          @relation(fields: [warehouseId], references: [id])

  @@map("goods_receipts")
}

model GoodsReceiptItem {
  id               String          @id @default(uuid())
  goodsReceiptId   String
  productId        String
  variantId        String?
  expectedQty      Int
  receivedQty      Int
  acceptedQty      Int
  rejectedQty      Int
  qcStatus         QualityStatus   @default(PENDING)
  qcNotes          String?
  rejectionReason  String?
  lotNumber        String?
  batchNumber      String?
  expiryDate       DateTime?
  serialNumbers    Json?
  receivedLocation String?
  notes            String?
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
  goodsReceipt     GoodsReceipt    @relation(fields: [goodsReceiptId], references: [id], onDelete: Cascade)
  product          Product         @relation(fields: [productId], references: [id])
  variant          ProductVariant? @relation(fields: [variantId], references: [id])

  @@map("goods_receipt_items")
}

model Customer {
  id                String            @id @default(uuid())
  companyId         String
  customerNumber    String            @unique
  type              CustomerType      @default(INDIVIDUAL)
  firstName         String?
  lastName          String?
  companyName       String?
  taxId             String?
  email             String?
  phone             String?
  mobile            String?
  billingAddress    Json?
  shippingAddress   Json?
  creditLimit       Decimal?
  paymentTerms      String?
  currency          String            @default("USD")
  preferredLanguage String?
  timezone          String?
  allowMarketing    Boolean           @default(true)
  source            String?
  status            CustomerStatus    @default(ACTIVE)
  notes             String?
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
  createdBy         String
  contacts          CustomerContact[]
  invoices          CustomerInvoice[]
  orders            Order[]

  @@map("customers")
}

model CustomerContact {
  id         String   @id @default(uuid())
  customerId String
  name       String
  title      String?
  email      String?
  phone      String?
  mobile     String?
  isPrimary  Boolean  @default(false)
  department String?
  isActive   Boolean  @default(true)
  notes      String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  customer   Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)

  @@map("customer_contacts")
}

model Order {
  id                String            @id @default(uuid())
  companyId         String
  orderNumber       String            @unique
  customerId        String
  warehouseId       String
  type              OrderType         @default(SALES)
  channel           OrderChannel      @default(DIRECT)
  subtotal          Decimal           @default(0)
  taxAmount         Decimal           @default(0)
  shippingCost      Decimal           @default(0)
  discountAmount    Decimal           @default(0)
  totalAmount       Decimal           @default(0)
  currency          String            @default("USD")
  status            OrderStatus       @default(PENDING)
  fulfillmentStatus FulfillmentStatus @default(PENDING)
  paymentStatus     PaymentStatus     @default(PENDING)
  orderDate         DateTime          @default(now())
  requiredDate      DateTime?
  promisedDate      DateTime?
  shippedDate       DateTime?
  deliveredDate     DateTime?
  shippingMethod    String?
  trackingNumber    String?
  carrier           String?
  shippingAddress   Json?
  priority          OrderPriority     @default(NORMAL)
  rushOrder         Boolean           @default(false)
  notes             String?
  internalNotes     String?
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
  createdBy         String
  invoices          CustomerInvoice[]
  items             OrderItem[]
  customer          Customer          @relation(fields: [customerId], references: [id])
  warehouse         Warehouse         @relation(fields: [warehouseId], references: [id])
  shipments         Shipment[]

  @@map("orders")
}

model OrderItem {
  id             String          @id @default(uuid())
  orderId        String
  productId      String
  variantId      String?
  orderedQty     Int
  shippedQty     Int             @default(0)
  remainingQty   Int
  unitPrice      Decimal
  totalPrice     Decimal
  discountAmount Decimal         @default(0)
  productName    String
  productSku     String
  status         OrderItemStatus @default(PENDING)
  notes          String?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  order          Order           @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product        Product         @relation(fields: [productId], references: [id])
  variant        ProductVariant? @relation(fields: [variantId], references: [id])

  @@map("order_items")
}

model Shipment {
  id                String             @id @default(uuid())
  shipmentNumber    String             @unique
  orderId           String?
  warehouseId       String
  carrier           String
  service           String?
  trackingNumber    String?
  fromAddress       Json
  toAddress         Json
  packageCount      Int                @default(1)
  weight            Decimal?
  dimensions        Json?
  shippingCost      Decimal?
  insuranceValue    Decimal?
  status            ShipmentStatus     @default(CREATED)
  shipDate          DateTime?
  estimatedDelivery DateTime?
  actualDelivery    DateTime?
  notes             String?
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  createdBy         String
  packages          ShipmentPackage[]
  tracking          ShipmentTracking[]
  order             Order?             @relation(fields: [orderId], references: [id])
  warehouse         Warehouse          @relation(fields: [warehouseId], references: [id])

  @@map("shipments")
}

model ShipmentPackage {
  id             String   @id @default(uuid())
  shipmentId     String
  packageNumber  String
  trackingNumber String?
  weight         Decimal?
  dimensions     Json?
  contents       Json?
  status         String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  shipment       Shipment @relation(fields: [shipmentId], references: [id], onDelete: Cascade)

  @@map("shipment_packages")
}

model ShipmentTracking {
  id          String   @id @default(uuid())
  shipmentId  String
  status      String
  description String?
  location    String?
  eventDate   DateTime
  rawData     Json?
  createdAt   DateTime @default(now())
  shipment    Shipment @relation(fields: [shipmentId], references: [id], onDelete: Cascade)

  @@map("shipment_tracking")
}

model StockTransfer {
  id              String              @id @default(uuid())
  transferNumber  String              @unique
  fromWarehouseId String
  toWarehouseId   String
  status          TransferStatus      @default(PENDING)
  requestedDate   DateTime            @default(now())
  shippedDate     DateTime?
  receivedDate    DateTime?
  approvedBy      String?
  approvedAt      DateTime?
  reason          String?
  notes           String?
  createdAt       DateTime            @default(now())
  updatedAt       DateTime            @updatedAt
  createdBy       String
  items           StockTransferItem[]
  fromWarehouse   Warehouse           @relation("TransferFrom", fields: [fromWarehouseId], references: [id])
  toWarehouse     Warehouse           @relation("TransferTo", fields: [toWarehouseId], references: [id])

  @@map("stock_transfers")
}

model StockTransferItem {
  id           String             @id @default(uuid())
  transferId   String
  productId    String
  variantId    String?
  requestedQty Int
  shippedQty   Int                @default(0)
  receivedQty  Int                @default(0)
  productName  String
  productSku   String
  lotNumber    String?
  batchNumber  String?
  status       TransferItemStatus @default(PENDING)
  notes        String?
  createdAt    DateTime           @default(now())
  updatedAt    DateTime           @updatedAt
  product      Product            @relation(fields: [productId], references: [id])
  transfer     StockTransfer      @relation(fields: [transferId], references: [id], onDelete: Cascade)
  variant      ProductVariant?    @relation(fields: [variantId], references: [id])

  @@map("stock_transfer_items")
}

model StockReservation {
  id              String            @id @default(uuid())
  inventoryItemId String
  reservationType ReservationType
  referenceType   String
  referenceId     String
  quantity        Int
  status          ReservationStatus @default(ACTIVE)
  reservedAt      DateTime          @default(now())
  expiresAt       DateTime?
  releasedAt      DateTime?
  reservedBy      String
  notes           String?
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  inventoryItem   InventoryItem     @relation(fields: [inventoryItemId], references: [id])

  @@map("stock_reservations")
}

model SupplierInvoice {
  id               String         @id @default(uuid())
  invoiceNumber    String         @unique
  supplierId       String
  purchaseOrderId  String?
  subtotal         Decimal
  taxAmount        Decimal        @default(0)
  totalAmount      Decimal
  currency         String         @default("USD")
  invoiceDate      DateTime
  dueDate          DateTime
  paidDate         DateTime?
  status           InvoiceStatus  @default(PENDING)
  paymentMethod    String?
  paymentReference String?
  notes            String?
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  purchaseOrder    PurchaseOrder? @relation(fields: [purchaseOrderId], references: [id])
  supplier         Supplier       @relation(fields: [supplierId], references: [id])

  @@map("supplier_invoices")
}

model CustomerInvoice {
  id               String        @id @default(uuid())
  invoiceNumber    String        @unique
  customerId       String
  orderId          String?
  subtotal         Decimal
  taxAmount        Decimal       @default(0)
  totalAmount      Decimal
  paidAmount       Decimal       @default(0)
  balanceAmount    Decimal
  currency         String        @default("USD")
  invoiceDate      DateTime      @default(now())
  dueDate          DateTime
  paidDate         DateTime?
  status           InvoiceStatus @default(PENDING)
  paymentMethod    String?
  paymentReference String?
  notes            String?
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
  customer         Customer      @relation(fields: [customerId], references: [id])
  order            Order?        @relation(fields: [orderId], references: [id])

  @@map("customer_invoices")
}

model InventoryAudit {
  id              String               @id @default(uuid())
  auditNumber     String               @unique
  warehouseId     String?
  productId       String?
  type            AuditType
  method          AuditMethod          @default(FULL_COUNT)
  status          AuditStatus          @default(PLANNED)
  plannedDate     DateTime
  startedDate     DateTime?
  completedDate   DateTime?
  auditedBy       String
  supervisedBy    String?
  totalItems      Int?
  itemsCounted    Int?
  discrepancies   Int?
  adjustmentValue Decimal?
  notes           String?
  createdAt       DateTime             @default(now())
  updatedAt       DateTime             @updatedAt
  items           InventoryAuditItem[]
  product         Product?             @relation(fields: [productId], references: [id])
  warehouse       Warehouse?           @relation(fields: [warehouseId], references: [id])

  @@map("inventory_audits")
}

model InventoryAuditItem {
  id                    String          @id @default(uuid())
  auditId               String
  productId             String
  variantId             String?
  warehouseId           String
  systemQty             Int
  countedQty            Int?
  adjustmentQty         Int?
  location              String?
  lotNumber             String?
  batchNumber           String?
  countedBy             String?
  countedAt             DateTime?
  verifiedBy            String?
  verifiedAt            DateTime?
  status                AuditItemStatus @default(PENDING)
  discrepancyReason     String?
  requiresInvestigation Boolean         @default(false)
  notes                 String?
  createdAt             DateTime        @default(now())
  updatedAt             DateTime        @updatedAt
  audit                 InventoryAudit  @relation(fields: [auditId], references: [id], onDelete: Cascade)
  product               Product         @relation(fields: [productId], references: [id])
  variant               ProductVariant? @relation(fields: [variantId], references: [id])
  warehouse             Warehouse       @relation(fields: [warehouseId], references: [id])

  @@map("inventory_audit_items")
}

model ProductReview {
  id            String   @id @default(uuid())
  productId     String
  rating        Int
  title         String?
  review        String?
  reviewerName  String?
  reviewerEmail String?
  isApproved    Boolean  @default(false)
  isVisible     Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  product       Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("product_reviews")
}

model SystemConfiguration {
  id          String   @id @default(uuid())
  category    String
  key         String
  value       Json
  description String?
  dataType    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([category, key])
  @@map("system_configurations")
}

model BundleItems {
  A               String
  B               String
  products        Product       @relation(fields: [A], references: [id], onDelete: Cascade)
